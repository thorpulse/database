#!/usr/bin/env php
<?php
require dirname(__DIR__) . '/vendor/autoload.php';

$database = dirname(__DIR__) . '/res/test.sq3';

if (file_exists($database)) {
    unlink($database);
}

$pdo = new PDO('sqlite:' . $database);

$query = 'CREATE TABLE test (
    id INTEGER PRIMARY KEY,
    name STRING NOT NULL
);';

$pdo->exec($query);

